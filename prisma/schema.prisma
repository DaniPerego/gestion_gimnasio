// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
  directUrl = env("POSTGRES_URL") // Opcional para desarrollo local
}

// --- Autenticación y Administración ---

// enum Rol {
//   ADMIN
//   RECEPCIONISTA
// }

model Usuario {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  nombre    String
  rol       String   @default("RECEPCIONISTA") // SQLite no soporta enums
  
  // Permisos Granulares
  permisoSocios        Boolean @default(true)
  permisoPlanes        Boolean @default(false)
  permisoSuscripciones Boolean @default(true)
  permisoAsistencias   Boolean @default(true)
  permisoReportes      Boolean @default(false)
  permisoConfiguracion Boolean @default(false)
  permisoUsuarios      Boolean @default(false)
  permisoTransacciones Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- Configuración White-Label ---

model Configuracion {
  id              String   @id @default(cuid())
  nombreGimnasio  String   @default("Mi Gimnasio")
  colorPrimario   String   @default("#000000") // Hex color
  colorSecundario String   @default("#ffffff") // Hex color
  logoUrl         String?
  fondoUrl        String?
  updatedAt       DateTime @updatedAt
}

// --- Negocio Core ---

model Socio {
  id                  String        @id @default(cuid())
  nombre              String
  apellido            String
  dni                 String        @unique
  email               String?
  telefono            String?
  fechaNacimiento     DateTime?
  genero              String?
  direccion           String?
  contactoEmergencia  String?
  telefonoEmergencia  String?
  condicionesMedicas  String?
  objetivo            String?
  esLibre             Boolean       @default(false)
  activo              Boolean       @default(true)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  
  suscripciones       Suscripcion[]
  asistencias         Asistencia[]
  cuentaCorriente     CuentaCorriente?
}

model Plan {
  id                 String        @id @default(cuid())
  nombre             String
  descripcion        String?
  precio             Decimal
  duracionMeses      Int
  allowsMusculacion  Boolean       @default(false)
  allowsCrossfit     Boolean       @default(false)
  activo             Boolean       @default(true)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  
  suscripciones Suscripcion[]
}

model Suscripcion {
  id          String        @id @default(cuid())
  socioId     String
  planId      String
  fechaInicio DateTime      @default(now())
  fechaFin    DateTime
  activa      Boolean       @default(true)
  
  socio       Socio         @relation(fields: [socioId], references: [id])
  plan        Plan          @relation(fields: [planId], references: [id])
  
  transacciones Transaccion[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Transaccion {
  id            String      @id @default(cuid())
  suscripcionId String
  monto         Decimal
  fecha         DateTime    @default(now())
  metodoPago    String      // 'EFECTIVO', 'TARJETA', 'TRANSFERENCIA', etc.
  notas         String?
  
  suscripcion   Suscripcion @relation(fields: [suscripcionId], references: [id])
}

model Asistencia {
  id        String   @id @default(cuid())
  socioId   String
  fecha     DateTime @default(now())
  
  socio     Socio    @relation(fields: [socioId], references: [id])
}

// --- Cuenta Corriente ---

model CuentaCorriente {
  id              String      @id @default(cuid())
  socioId         String      @unique
  saldoDeuda      Decimal     @default(0) // Monto adeudado (positivo)
  saldoCredito    Decimal     @default(0) // Monto a favor (positivo)
  
  descripcion     String?
  estado          String      @default("ACTIVO") // ACTIVO, SALDADO, CERRADO
  
  socio           Socio       @relation(fields: [socioId], references: [id], onDelete: Cascade)
  movimientos     MovimientoCuentaCorriente[]
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([socioId])
}

model MovimientoCuentaCorriente {
  id                  String      @id @default(cuid())
  cuentaCorrienteId   String
  transaccionId       String?
  
  tipo                String      // "DEUDA", "CREDITO", "PAGO", "AJUSTE"
  monto               Decimal
  descripcion         String
  
  cuentaCorriente     CuentaCorriente @relation(fields: [cuentaCorrienteId], references: [id], onDelete: Cascade)
  
  createdAt           DateTime    @default(now())
  
  @@index([cuentaCorrienteId])
}
