// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
  directUrl = env("POSTGRES_URL")
}

// --- Autenticación y Administración ---

// enum Rol {
//   ADMIN
//   RECEPCIONISTA
// }

model Usuario {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  nombre    String
  rol       String   @default("RECEPCIONISTA") // SQLite no soporta enums
  
  // Permisos Granulares
  permisoSocios        Boolean @default(true)
  permisoPlanes        Boolean @default(false)
  permisoSuscripciones Boolean @default(true)
  permisoAsistencias   Boolean @default(true)
  permisoReportes      Boolean @default(false)
  permisoConfiguracion Boolean @default(false)
  permisoUsuarios      Boolean @default(false)
  permisoTransacciones Boolean @default(false)
  permisoProductos     Boolean @default(false) // Nuevo permiso para inventario/tienda

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- Configuración White-Label ---

model Configuracion {
  id              String   @id @default(cuid())
  nombreGimnasio  String   @default("Mi Gimnasio")
  colorPrimario   String   @default("#000000") // Hex color
  colorSecundario String   @default("#ffffff") // Hex color
  logoUrl         String?
  updatedAt       DateTime @updatedAt
}

// --- Negocio Core ---

model Socio {
  id              String        @id @default(cuid())
  nombre          String
  apellido        String
  dni             String        @unique
  email           String?
  telefono        String?
  fechaNacimiento DateTime?
  activo          Boolean       @default(true)
  esLibre         Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  suscripciones   Suscripcion[]
  asistencias     Asistencia[]
  transacciones   Transaccion[]
}

model Plan {
  id            String        @id @default(cuid())
  nombre        String
  descripcion   String?
  precio        Decimal
  duracionMeses Int
  activo        Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  suscripciones Suscripcion[]
}

model Suscripcion {
  id          String        @id @default(cuid())
  socioId     String
  planId      String
  fechaInicio DateTime      @default(now())
  fechaFin    DateTime
  activa      Boolean       @default(true)
  
  socio       Socio         @relation(fields: [socioId], references: [id])
  plan        Plan          @relation(fields: [planId], references: [id])
  
  transacciones Transaccion[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

// --- Tienda y Productos ---

model Producto {
  id          String   @id @default(cuid())
  nombre      String
  descripcion String?
  precio      Decimal
  stock       Int      @default(0)
  codigo      String?  @unique // Para código de barras si se usa
  activo      Boolean  @default(true)
  
  items       ItemTransaccion[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Transaccion {
  id            String      @id @default(cuid())
  tipo          String      @default("CUOTA") // 'CUOTA', 'VENTA', 'GASTO'
  
  // Relaciones opcionales según el tipo
  suscripcionId String?
  suscripcion   Suscripcion? @relation(fields: [suscripcionId], references: [id])
  
  // Si la venta se asocia a un socio sin ser una cuota
  socioId       String?
  socio         Socio?       @relation(fields: [socioId], references: [id])

  monto         Decimal
  fecha         DateTime    @default(now())
  metodoPago    String      // 'EFECTIVO', 'TARJETA', 'TRANSFERENCIA', etc.
  notas         String?
  
  items         ItemTransaccion[]
}

model ItemTransaccion {
  id            String      @id @default(cuid())
  transaccionId String
  productoId    String
  cantidad      Int
  precioUnitario Decimal    // Precio al momento de la venta
  subtotal      Decimal
  
  transaccion   Transaccion @relation(fields: [transaccionId], references: [id])
  producto      Producto    @relation(fields: [productoId], references: [id])
}

model Asistencia {
  id        String   @id @default(cuid())
  socioId   String
  fecha     DateTime @default(now())
  
  socio     Socio    @relation(fields: [socioId], references: [id])
}
